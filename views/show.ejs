<h1>dish details</h1>

<h2><%= dish.title %></h2>

<p><%= dish.description %></p>


<% if (isLoggedIn) { %>
<form action="/dishes/<%= dish.id %>?_method=delete" method="post">
  <button>delete</button>
</form>
<% } %>

<a href="/dishes/<%= dish.id %>/edit">edit dish</a>


<form action="/comments" method="post">
  <label for="">comment</label>
  <textarea name="content"></textarea>
  <input type="hidden" name="dish_id" value="<%= dish.id %>">
  <button>post</button>
</form>


<% for (let comment of comments) { %>
  <p><%= comment.content %></p>
  <p><%= comment.email %></p>
  <hr>
<% } %>

